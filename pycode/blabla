import tkinter as tk
from tkinter import ttk

class ScrollableFrame(tk.Frame):
    def __init__(self, parent, *args, **kwargs):
        super().__init__(parent, *args, **kwargs)

        # Create a canvas
        self.canvas = tk.Canvas(self)
        self.canvas.grid(row=0, column=0, sticky='nsew')

        # Create a vertical scrollbar linked to the canvas
        self.v_scrollbar = ttk.Scrollbar(self, orient="vertical", command=self.canvas.yview)
        self.v_scrollbar.grid(row=0, column=1, sticky='ns')

        # Configure the canvas to use the vertical scrollbar
        self.canvas.configure(yscrollcommand=self.v_scrollbar.set)

        # Create a frame inside the canvas
        self.scrollable_frame = ttk.Frame(self.canvas)
        self.scrollable_frame.bind(
            "<Configure>",
            lambda e: self.canvas.configure(
                scrollregion=self.canvas.bbox("all")
            )
        )

        # Add the scrollable frame to the canvas
        self.canvas.create_window((0, 0), window=self.scrollable_frame, anchor="nw")

        # Make the canvas expandable
        self.grid_rowconfigure(0, weight=1)
        self.grid_columnconfigure(0, weight=1)

class MainApplication(tk.Tk):
    def __init__(self, *args, **kwargs):
        super().__init__(*args, **kwargs)

        self.title("Scrollable Frame Example")
        self.geometry("400x300")

        # Create a main frame
        self.content_frame = ttk.Frame(self)
        self.content_frame.grid(row=0, column=0, sticky='nsew')

        # Make the content frame expandable
        self.grid_rowconfigure(0, weight=1)
        self.grid_columnconfigure(0, weight=1)

        # Create the scrollable frame inside the content frame
        self.scrollable_content = ScrollableFrame(self.content_frame)
        self.scrollable_content.grid(row=0, column=0, sticky='nsew')

        # Make the scrollable content expandable
        self.scrollable_content.grid_rowconfigure(0, weight=1)
        self.scrollable_content.grid_columnconfigure(0, weight=1)

        # Add sample content to the scrollable frame for demonstration
        for i in range(50):
            ttk.Label(self.scrollable_content.scrollable_frame, text=f"Sample item {i+1}").grid(row=i, column=0, padx=10, pady=5)

if __name__ == "__main__":
    app = MainApplication()
    app.mainloop()
